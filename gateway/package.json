{
  "name": "hcservicegateway",
  "version": "2.0.0",
  "description": "Health Canada Service Gateway with Chatbot, 'Alfred', Prototype",
  "scripts": {
    "jest": "jest",
    "test": "run-s build jest",
    "copy-gateway": "cp -rf ./gateway ./build ",
    "docker:build": "docker build -t hcuser/services-gateway .",
    "docker:build:clean": "docker build -t hcuser/services-gateway . --no-cache",
    "docker:build:dev": "docker build -t hcuser/services-gateway -f Dockerfile.dev .",
    "docker:build:dev:clean": "docker build -t hcuser/services-gateway -f Dockerfile.dev . --no-cache",
    "docker:refresh": "run-s --continue-on-error docker:kill docker:build docker:run",
    "docker:refresh:clean": "run-s --continue-on-error docker:kill docker:build:clean docker:run",
    "docker:refresh:dev": "run-s --continue-on-error docker:kill docker:build:dev docker:run",
    "docker:refresh:dev:clean": "run-s --continue-on-error docker:kill docker:build:dev:clean docker:run",
    "docker:run": "docker run --net=bridge -p 3000:3000 -d --name sg-local hcuser/services-gateway",
    "docker:stop": "docker stop sg-local",
    "docker:rm": "docker rm sg-local",
    "docker:kill": "run-s --continue-on-error docker:stop docker:rm",
    "docker:ssh": "docker exec -it sg-local /bin/bash",
    "docker:logs": "docker logs -f sg-local",
    "build:gateway": "webpack --config webpack.gateway.common.js",
    "build:server": "webpack --config webpack.server.common.js",
    "build:gateway:prod": "webpack --config webpack.gateway.prod.js",
    "build:server:prod": "webpack --config webpack.server.prod.js",
    "build:search:scrape": "node ./src/search/gateway/scrape.js",
    "build:search:xlsx": "node ./src/search/software/model.js",
    "build": "run-s build:search:xlsx build:search:scrape build:server build:gateway",
    "build:prod": "run-s build:search:xlsx build:search:scrape build:server:prod build:gateway:prod",
    "build:gateway:watch": "webpack --config webpack.gateway.common.js --watch",
    "build:server:watch": "webpack --config webpack.server.common.js --watch",
    "serve": "node ./build/server.js",
    "serve:hot": "nodemon ./build/server.js",
    "prod": "run-s build:prod serve",
    "dev": "npm-run-all -s build jest -p build:server build:gateway serve",
    "start": "npm-run-all -s build jest -p build:server:watch build:gateway:watch serve:hot",
    "// TODO: ": "echo \"Wait for dependencies to catch up: https://github.com/webpack/webpack/issues/8656\""
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "author": "HCSC",
  "contributors": [
    "Paul Coyte",
    "Ryan Mylrea",
    "Biljana Petkovic"
  ],
  "license": "MIT",
  "dependencies": {
    "@babel/polyfill": "^7.4.4",
    "body-parser": "^1.19.0",
    "date-fns": "^1.30.1",
    "dotenv": "^8.0.0",
    "express": "^4.17.0",
    "fuse.js": "^3.4.5",
    "helmet": "^3.21.2",
    "http-proxy-middleware": "^0.19.1",
    "morgan": "^1.9.1",
    "node-fetch": "^2.6.0",
    "rotating-file-stream": "^1.4.2",
    "socket.io": "^2.2.0",
    "swagger-ui-express": "^4.0.6",
    "url": "^0.11.0",
    "url-search-params-polyfill": "^6.0.0",
    "whatwg-fetch": "^3.0.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/runtime": "^7.4.5",
    "acorn": "^6.1.1",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-transform-util-promisify": "^0.2.2",
    "cheerio": "^1.0.0-rc.3",
    "clean-webpack-plugin": "^2.0.2",
    "cli-progress": "^2.1.1",
    "copy-webpack-plugin": "^5.0.3",
    "css-loader": "^2.1.1",
    "exceljs": "^1.12.2",
    "file-loader": "^4.0.0",
    "html-webpack-exclude-assets-plugin": "0.0.7",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.8.0",
    "jest-express": "^1.10.1",
    "nodemon": "^1.19.0",
    "npm-run-all": "^4.1.5",
    "prompt": "^1.0.0",
    "remove-files-webpack-plugin": "^1.1.3",
    "sass": "^1.20.1",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "uniqid": "^5.0.3",
    "webpack": "~4.34.0",
    "webpack-cli": "^3.3.5",
    "webpack-dev-middleware": "^3.7.0",
    "webpack-hot-middleware": "^2.25.0",
    "webpack-merge": "^4.2.1",
    "webpack-node-externals": "^1.7.2",
    "webpack-source-map-support": "^2.0.1"
  },
  "jest": {
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "moduleFileExtensions": [
      "js"
    ],
    "modulePathIgnorePatterns": [
      "build",
      "node_modules",
      "src/gateway",
      "src/server/test"
    ]
  }
}
